
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Character {
  id    String     @default(uuid()) @id
  name  String
  height Float?
  mass Float?
  hair_color String?
  skin_color String?
  eye_color String?
  birth_year String?
  gender String?
  homeworld Planet? @relation(fields: [planetId], references: [id])
  films Film[]
  species Specie? @relation(fields: [speciesId], references: [id])
  vehicles Vehicle[]
  starships Starship[]
  created DateTime @default(now())
  edited DateTime @updatedAt
  swapiId String @unique

  planetSwapiId String[]
  filmSwapiId String[]
  specieSwapiId String[]
  vehicleSwapiId String[]
  starshipSwapiId String[]

  speciesId String?
  planetId String?
}

model Planet {
  id    String     @default(uuid()) @id
  name String?
  rotation_period String?
  orbital_period String?
	diameter Float?
  climate String?
	gravity String?
	terrain String?
	surface_water Float?
	population Float?
  residents Character[]
  films Film[]
  created DateTime @default(now())
  edited DateTime @updatedAt
  swapiId String @unique

  characterSwapiId String[]
  filmSwapiId String[]
}

model Film {
  id String @default(uuid()) @id
  title String?
  episode_id Int?
	opening_crawl String?
  director String?
  producer String?
  release_date String?
  characters Character[]
  planets Planet[]
  starships Starship[]
  vehicles Vehicle[]
  species Specie[]
  created DateTime @default(now())
  edited DateTime @updatedAt
  swapiId String @unique

  characterSwapiId String[]
  planetSwapiID String[]
  starshipSwapiId String[]
  vehicleSwapiId String[]
  specieSwapiId String[]
}

model Starship {
  id String @default(uuid()) @id
  name String?
  model String?
  manufacturer String?
	cost_in_credits Float?
	length Float?
	max_atmosphering_speed String?
	crew String?
	passengers Float?
	cargo_capacity Float?
	consumables String?
	hyperdrive_rating String?
  MGLT Float?
	starship_class String?
	pilots Character[]
	films Film[]
	created DateTime @default(now())
	edited DateTime @updatedAt
  swapiId String @unique

  characterSwapiId String[]
  filmSwapiId String[]
}

model Vehicle {
  id String @default(uuid()) @id
  name String?
	model String?
	manufacturer String?
	cost_in_credits Float?
	length Float?
	max_atmosphering_speed Float?
	crew String?
	passengers Float?
	cargo_capacity Float?
	consumables String?
	vehicle_class String?
	pilots Character[]
	films Film[]
	created DateTime @default(now())
	edited DateTime @updatedAt
  swapiId String @unique

  characterSwapiId String[]
  filmSwapiId String[]
}

model Specie {
  id String @default(uuid()) @id
  name String
	classification String?
	designation String?
	average_height Float?
	skin_colors String?
	hair_colors String?
	eye_colors String?
	average_lifespan Float?
	homeworld String?
	language String?
  people Character[]
  films Film[]
  created DateTime @default(now())
  edited DateTime @updatedAt
  swapiId String @unique

  characterSwapiId String[]
  filmSwapiId String[]
  planetSwapiId String[]
}
